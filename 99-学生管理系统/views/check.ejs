<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>查看学生信息</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container">
    <p>请输入要查看的学生姓名: <input type="text" name="firstName" id="firstName"></p>
    <button id="submit">查询</button>
    <a href="/">返回首页</a>
</div>
<script src="/js/ajax.js"></script>
<script>
    submit.onclick = function(){
        if(firstName.value == ""){
            alert("请输入姓名");
        }else{
            ajax({
                url:"/check",
                method:"POST",
                data:{
                    name:firstName.value
                },
                success(msg){
                    alert(msg);
                }
            })
        }
    }
</script>
</body>
</html>